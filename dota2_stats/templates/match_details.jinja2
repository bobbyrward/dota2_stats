	<td>
	  {% if pm.player.is_anonymous %}
	  Anonymous
	  {% else %}
	  <a href="{{pm.player.url}}">{{pm.player.display_name}}</a>
	  {% endif %}
	</td>
	<td><img src="{{pm.hero.full_image_url}}" />{{pm.hero.proper_name}}</td>
	<td>{{pm.level}}</td>
	<td>{{pm.kills}}</td>
	<td>{{pm.deaths}}</td>
	<td>{{pm.assists}}</td>
	<td>{{pm.gold}}</td>
	<td>{{pm.last_hits}}</td>
	<td>{{pm.denies}}</td>
	<td>{{pm.xp_per_min}}</td>
	<td>{{pm.gold_per_min}}</td>
	<td>
	  {% for item in pm.items %}
		{% if item %}
		  <a class="item-thumb" href="{{item.url}}" style="background-image: url({{item.thumbnail_image_url}})">{{item.name}}</a>
		{% endif %}
	  {% endfor %}
	</td>
  </tr>
  {% endfor %}

</table>
{% endblock %}
